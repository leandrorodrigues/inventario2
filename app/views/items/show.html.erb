<div class="page-header">
  <h1>Items</h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => 'List'), items_path, :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'eye', :text => 'Show Details'), item_path(@item), :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'edit', :text => 'Edit item'), edit_item_path(@item), :class => 'nav-link ' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'trash', :text => 'Delete item'), item_path(@item), :class => 'nav-link ', method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => 'Add new Item'), new_item_path, :class => 'nav-link' %>
    </li>
  </ul>
  <table class="table table-striped table-sm">
      <tr>
        <td>Number:</td>
        <td><%=  @item.number %></td>
      </tr>
      <tr>
        <td>Title:</td>
        <td><%=  @item.title %></td>
      </tr>
      <tr>
        <td>Brand name:</td>
        <td><%=  @item.brand_name %></td>
      </tr>
      <tr>
        <td>Model description:</td>
        <td><%=  @item.model_description %></td>
      </tr>
      <tr>
        <td>Serial number:</td>
        <td><%=  @item.serial_number %></td>
      </tr>
      <tr>
        <td>Warranty date:</td>
        <td><%=  @item.warranty_date %></td>
      </tr>
      <tr>
        <td>Value:</td>
        <td><%=  @item.value %></td>
      </tr>
      <tr>
        <td>Net value:</td>
        <td><%=  @item.net_value %></td>
      </tr>
      <tr>
        <td>Allocation:</td>
        <td><%=  @item.allocation %></td>
      </tr>
  </table>
</div>
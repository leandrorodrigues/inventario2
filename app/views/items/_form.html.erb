<%= semantic_form_for @item do |f| %>
<%= f.inputs do %>
  <%= f.input :number %>
  <%= f.input :title %>
  <%= f.input :brand_name %>
  <%= f.input :model_description %>
  <%= f.input :serial_number %>
  <%= f.input :warranty_date %>
  <%= f.input :value %>
  <%= f.input :net_value %>
  <%= f.input :allocation %>
<% end %>

<%= f.actions do %>
<%= f.action :submit, :as => :input %>
<% end %>
<% end %>
<div class="page-header">
  <h1><%=  plural_table_name.capitalize %></h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%%= link_to (fa_icon 'list', :text => 'List'), <%= plural_table_name %>_path, :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%%= link_to (fa_icon 'plus', :text => 'Add new <%= human_name %>'), new_<%= singular_table_name %>_path, :class => 'nav-link' %>
    </li>
  </ul>

  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
    <% attributes.each do |attribute| -%>
        <th><%= attribute.human_name %></th>
    <% end -%>
        <th class="action"></th>
        <th class="action"></th>
        <th class="action"></th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name%>.each do |<%= singular_table_name %>| %>
        <%%= content_tag :tr, id: dom_id(<%= singular_table_name %>), class: dom_class(<%= singular_table_name %>) do %>
          <% attributes.each do |attribute| -%>
            <td><%%= <%= snippet_show_attribute(singular_table_name, attribute) %> %></td>
          <% end -%>
          <td class="action"><%%= link_to <%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-sm btn-outline-info' do %><i class="far fa-eye"></i><%% end %></td>
          <td class="action">
            <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-sm btn-outline-warning' do %>
              <i class="far fa-edit"></i>
            <%% end %>
          </td>
          <td class="action">
            <%%= link_to <%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="far fa-trash-alt"></i>
            <%% end %>
          </td>
        <%% end %>
      <%% end %>
    </tbody>
  </table>
  <%%= paginate(@<%= plural_table_name %>) %>
</div>
<%%= form_for(@<%= singular_table_name %>, html: {class: "m-3", role: "form" }) do |f| %>

<% attributes.each do |attribute| -%>
  <div class="form-group row">
    <% if attribute.field_type == :check_box %>
      <div class="col-sm-offset-2 col-sm-10"> 
        <div class="checkbox">
          <label>
            <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
            <%= attribute.human_name %>      
          </label>
        </div>
      </div>
    <% else %>
      <%%= f.label :<%= attribute.name %>, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, class: "form-control form-control-sm" %>
      </div>
    <% end %>
  </div>
<% end -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<%% end %>

<div class="page-header">
  <h1><%= Container.model_name.human  %></h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => t_title(:index)), containers_path, :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'eye', :text => t_title(:show)), container_path(@container), :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'edit', :text => t_title(:edit)), edit_container_path(@container), :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'trash', :text => t_title(:delete)), container_path(@container), :class => 'nav-link ', method: :delete, data: { confirm: t_confirm_delete(@container) } %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => t_title(:new)), new_container_path, :class => 'nav-link' %>
    </li>
  </ul>
  <table class="table table-striped table-sm">
      <tr>
        <th><%= t_attr(:title) %></th>
        <td><%=  @container.title %></td>
      </tr>
      <tr>
        <th><%= t_attr(:place) %></th>
        <td><%=  link_to_if @container.place, @container.place.try(:title), @container.place %></td>
      </tr>
      <tr>
        <th><%= t_attr(:item) %></th>
        <td><%=  link_to_if @container.item, @container.item.try(:title), @container.item %></td>
      </tr>
      <tr>
        <th><%= t_attr(:container_type) %></th>
        <td><%=  link_to_if @container.container_type, @container.container_type.try(:title), @container.container_type %></td>
      </tr>
      <tr>
        <th><%= t_attr(:reverse) %></th>
        <td><%=  t @container.reverse %></td>
      </tr>
      <tr>
        <th><%= t_attr(:container) %></th>
        <td><%=  link_to_if @container.container, @container.container.try(:title), @container.container %></td>
      </tr>
  </table>
</div>
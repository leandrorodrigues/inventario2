<body>
  <div class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap shadow">
      <%= link_to "Inventario2", "#", class: "navbar-brand" %>
      <div class="pull-right">
        <%=  link_to (fa_icon 'sign-out'), '#', :class => 'text-muted' %>
      </div>
  </div>
  <div class="container-fluid">
    <%= render '/common/flashes' %>
    <div class="row">
      <nav class="col-md-2 d-none d-md-block bg-light sidebar">
        <div class="sidebar-sticky">
          <%= render '/common/menu' %>
        </div>
      </nav>
      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <%= yield %>
      </main>

    </div>

  </div>

<div class="page-header">
  <h1>Devices</h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => 'List'), devices_path, :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'eye', :text => 'Show Details'), device_path(@device), :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'edit', :text => 'Edit device'), edit_device_path(@device), :class => 'nav-link ' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'trash', :text => 'Delete device'), device_path(@device), :class => 'nav-link ', method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => 'Add new Device'), new_device_path, :class => 'nav-link' %>
    </li>
  </ul>
  <table class="table table-striped table-sm">
      <tr>
        <td>Title:</td>
        <td><%=  @device.title %></td>
      </tr>
      <tr>
        <td>Item:</td>
        <td><%=  link_to_if @device.item, @device.item.try(:title), @device.item %></td>
      </tr>
      <tr>
        <td>Device model:</td>
        <td><%=  link_to_if @device.device_model, @device.device_model.try(:title), @device.device_model %></td>
      </tr>
      <tr>
        <td>Ip:</td>
        <td><%=  @device.ip %></td>
      </tr>
      <tr>
        <td>Host:</td>
        <td><%=  @device.host %></td>
      </tr>
      <tr>
        <td>Description:</td>
        <td><%=  @device.description %></td>
      </tr>
      <tr>
        <td>Unknown:</td>
        <td><%=  @device.unknown %></td>
      </tr>
  </table>
</div>
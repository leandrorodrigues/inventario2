<div class="page-header">
  <h1><%= Device.model_name.human  %></h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => t_title(:index)), devices_path, :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'eye', :text => t_title(:show)), device_path(@device), :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'edit', :text => t_title(:edit)), edit_device_path(@device), :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'trash', :text => t_title(:delete)), device_path(@device), :class => 'nav-link ', method: :delete, data: { confirm: t_confirm_delete(@device) } %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => t_title(:new)), new_device_path, :class => 'nav-link' %>
    </li>
  </ul>
  <table class="table table-striped table-sm">
      <tr>
        <th><%= t_attr(:title) %></th>
        <td><%=  @device.title %></td>
      </tr>
      <tr>
        <th><%= t_attr(:item) %></th>
        <td><%=  link_to_if @device.item, @device.item.try(:title), @device.item %></td>
      </tr>
      <tr>
        <th><%= t_attr(:device_model) %></th>
        <td><%=  link_to_if @device.device_model, @device.device_model.try(:title), @device.device_model %></td>
      </tr>
      <tr>
        <th><%= t_attr(:ip) %></th>
        <td><%=  @device.ip %></td>
      </tr>
      <tr>
        <th><%= t_attr(:host) %></th>
        <td><%=  @device.host %></td>
      </tr>
      <tr>
        <th><%= t_attr(:description) %></th>
        <td><%=  @device.description %></td>
      </tr>
      <tr>
        <th><%= t_attr(:unknown) %></th>
        <td><%=  t @device.unknown %></td>
      </tr>
  </table>
</div>
<div class="page-header">
  <h1>Container types</h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => 'List'), container_types_path, :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => 'Add New Container type'), new_container_type_path, :class => 'nav-link' %>
    </li>
  </ul>

  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
            <th>Title</th>
            <th>Slots</th>
            <th>Nested</th>
            <th class="action"></th>
        <th class="action"></th>
        <th class="action"></th>
      </tr>
    </thead>

    <tbody>
      <% @container_types.each do |container_type| %>
        <%= content_tag :tr, id: dom_id(container_type), class: dom_class(container_type) do %>
                      <td><%= container_type.title %></td>
                      <td><%= container_type.slots %></td>
                      <td><%= container_type.nested %></td>
                    <td class="action"><%= link_to container_type_path(container_type), :class => 'btn btn-sm btn-outline-info' do %><i class="far fa-eye"></i><% end %></td>
          <td class="action">
            <%= link_to edit_container_type_path(container_type), :class => 'btn btn-sm btn-outline-warning' do %>
              <i class="far fa-edit"></i>
            <% end %>
          </td>
          <td class="action">
            <%= link_to container_type_path(container_type), :class => 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@container_types) %>
</div>
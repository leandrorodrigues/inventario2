<div class="page-header">
  <h1><%= DeviceBrand.model_name.human  %></h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => t_title(:index)), device_brands_path, :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <a href="#search-collapse" class="nav-link" data-toggle="collapse"><%= fa_icon 'search' %> <%= t_action :search %> </a>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => t_title(:new) ), new_device_brand_path, :class => 'nav-link' %>
    </li>
  </ul>

  <div class="collapse card" id="search-collapse">
    <form class="card-body">
      <div class="input-group">
        <input type="text" class="form-control">
        <div class="input-group-append">
          <button class="btn btn-primary" type="button"><%= fa_icon 'search' %></button>
        </div>
      </div>
    </form>
  </div>

  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
        <th><%= t_attr(:title) %></th>
        <th class="action"></th>
        <th class="action"></th>
        <th class="action"></th>
      </tr>
    </thead>

    <tbody>
      <% @device_brands.each do |device_brand| %>
       <tr>
          <td><%= device_brand.title %></td>

          <td class="action">
            <%= link_to device_brand_path(device_brand), :title => t_title(:show), :class => 'btn btn-sm btn-outline-info' do %><i class="far fa-eye"></i><% end %>
          </td>

          <td class="action">
            <%= link_to edit_device_brand_path(device_brand), :title => t_title(:edit), :class => 'btn btn-sm btn-outline-warning' do %>
              <i class="far fa-edit"></i>
            <% end %>
          </td>

          <td class="action">
            <%= link_to device_brand_path(device_brand), :title => t_title(:delete),  :class => 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: t_confirm_delete(device_brand) } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= paginate(@device_brands) %>
</div>
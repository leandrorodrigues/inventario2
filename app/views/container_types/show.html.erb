<div class="page-header">
  <h1>Container types</h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => 'List'), container_types_path, :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'eye', :text => 'Show Details'), container_type_path(@container_type), :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'edit', :text => 'Edit Container type'), edit_container_type_path(@container_type), :class => 'nav-link ' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'trash', :text => 'Delete Container type'), container_type_path(@container_type), :class => 'nav-link ', method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => 'Add New Container type'), new_container_type_path, :class => 'nav-link' %>
    </li>
  </ul>
  <table class="table table-striped table-sm">
      <tr>
        <td>Title:</td>
        <td><%=  @container_type.title %></td>
      </tr>
      <tr>
        <td>Slots:</td>
        <td><%=  @container_type.slots %></td>
      </tr>
      <tr>
        <td>Nested:</td>
        <td><%=  @container_type.nested %></td>
      </tr>
  </table>
</div>
<div class="page-header">
  <h1><%= StockItem.model_name.human  %></h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => t_title(:index)), stock_items_path, :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'eye', :text => t_title(:show)), stock_item_path(@stock_item), :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'edit', :text => t_title(:edit)), edit_stock_item_path(@stock_item), :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'trash', :text => t_title(:delete)), stock_item_path(@stock_item), :class => 'nav-link ', method: :delete, data: { confirm: t_confirm_delete(@stock_item) } %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => t_title(:new)), new_stock_item_path, :class => 'nav-link' %>
    </li>
  </ul>
  <table class="table table-striped table-sm">
      <tr>
        <th><%= t_attr(:title) %></th>
        <td><%=  @stock_item.title %></td>
      </tr>
      <tr>
        <th><%= t_attr(:item) %></th>
        <td><%=  link_to_if @stock_item.item, @stock_item.item.try(:title), @stock_item.item %></td>
      </tr>
      <tr>
        <th><%= t_attr(:quantity) %></th>
        <td><%=  @stock_item.quantity %></td>
      </tr>
      <tr>
        <th><%= t_attr(:is_package) %></th>
        <td><%=  t @stock_item.is_package %></td>
      </tr>
      <tr>
        <th><%= t_attr(:package_quantity) %></th>
        <td><%=  @stock_item.package_quantity %></td>
      </tr>
  </table>
</div>
<div class="page-header">
  <h1><%= Item.model_name.human  %></h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => t_title(:index)), items_path, :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'eye', :text => t_title(:show)), item_path(@item), :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'edit', :text => t_title(:edit)), edit_item_path(@item), :class => 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'trash', :text => t_title(:delete)), item_path(@item), :class => 'nav-link ', method: :delete, data: { confirm: t_confirm_delete(@item) } %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => t_title(:new)), new_item_path, :class => 'nav-link' %>
    </li>
  </ul>
  <table class="table table-striped table-sm">
      <tr>
        <th><%= t_attr(:number) %></th>
        <td><%=  @item.number %></td>
      </tr>
      <tr>
        <th><%= t_attr(:title) %></th>
        <td><%=  @item.title %></td>
      </tr>
      <tr>
        <th><%= t_attr(:brand_name) %></th>
        <td><%=  @item.brand_name %></td>
      </tr>
      <tr>
        <th><%= t_attr(:model_description) %></th>
        <td><%=  @item.model_description %></td>
      </tr>
      <tr>
        <th><%= t_attr(:serial_number) %></th>
        <td><%=  @item.serial_number %></td>
      </tr>
      <tr>
        <th><%= t_attr(:warranty_date) %></th>
        <td><%=  l @item.warranty_date, format: :short if @item.warranty_date.present? %></td>
      </tr>
      <tr>
        <th><%= t_attr(:value) %></th>
        <td><%=  number_with_precision @item.value, precision: 2 %></td>
      </tr>
      <tr>
        <th><%= t_attr(:net_value) %></th>
        <td><%=  number_with_precision @item.net_value, precision: 2 %></td>
      </tr>
      <tr>
        <th><%= t_attr(:allocation) %></th>
        <td><%=  @item.allocation %></td>
      </tr>
  </table>
</div>
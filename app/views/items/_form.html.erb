<%= form_for(@item, html: {class: "m-3", role: "form" }) do |f| %>

  <div class="form-group row">
    
      <%= f.label :number, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.number_field :number, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :title, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :brand_name, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :brand_name, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :model_description, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :model_description, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :serial_number, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :serial_number, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :warranty_date, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.date_select :warranty_date, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :value, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :value, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :net_value, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_field :net_value, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :allocation, class: "col-sm-2 col-form-label col-form-label-sm" %>
      <div class="col-sm-10">
        <%= f.text_area :allocation, class: "form-control form-control-sm" %>
      </div>
    
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="page-header">
  <h1><%= DeviceModel.model_name.human  %></h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => t_title(:index)), device_models_path, :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => t_title(:new) ), new_device_model_path, :class => 'nav-link' %>
    </li>
  </ul>

  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
        <th><%= t_attr(:title) %></th>
        <th><%= t_attr(:device_brand) %></th>
        <th><%= t_attr(:device_type) %></th>
        <th><%= t_attr(:rack_units) %></th>
        <th><%= t_attr(:ethernet_interfaces) %></th>
        <th><%= t_attr(:fiber_interfaces) %></th>
        <th><%= t_attr(:stock_unit) %></th>
        <th class="action"></th>
        <th class="action"></th>
        <th class="action"></th>
      </tr>
    </thead>

    <tbody>
      <% @device_models.each do |device_model| %>
       <tr>
          <td><%= device_model.title %></td>
          <td><%= link_to_if device_model.device_brand, device_model.device_brand.try(:title), device_model.device_brand %></td>
          <td><%= link_to_if device_model.device_type, device_model.device_type.try(:title), device_model.device_type %></td>
          <td><%= device_model.rack_units %></td>
          <td><%= device_model.ethernet_interfaces %></td>
          <td><%= device_model.fiber_interfaces %></td>
          <td><%= device_model.stock_unit %></td>

          <td class="action">
            <%= link_to device_model_path(device_model), :title => t_title(:show), :class => 'btn btn-sm btn-outline-info' do %><i class="far fa-eye"></i><% end %>
          </td>

          <td class="action">
            <%= link_to edit_device_model_path(device_model), :title => t_title(:edit), :class => 'btn btn-sm btn-outline-warning' do %>
              <i class="far fa-edit"></i>
            <% end %>
          </td>

          <td class="action">
            <%= link_to device_model_path(device_model), :title => t_title(:delete),  :class => 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: t_confirm_delete(device_model) } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <%= paginate(@device_models) %>
</div>
<div class="page-header">
  <h1>Items</h1>
</div>

<div class="table-responsive">
  <ul class="nav nav-tabs justify-content-end">
    <li class="nav-item">
      <%= link_to (fa_icon 'list', :text => 'List'), items_path, :class => 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to (fa_icon 'plus', :text => 'Add new Item'), new_item_path, :class => 'nav-link' %>
    </li>
  </ul>

  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
            <th>Number</th>
            <th>Title</th>
            <th>Brand name</th>
            <th>Model description</th>
            <th>Serial number</th>
            <th>Warranty date</th>
            <th>Value</th>
            <th>Net value</th>
            <th>Allocation</th>
            <th class="action"></th>
        <th class="action"></th>
        <th class="action"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <%= content_tag :tr, id: dom_id(item), class: dom_class(item) do %>
                      <td><%= item.number %></td>
                      <td><%= item.title %></td>
                      <td><%= item.brand_name %></td>
                      <td><%= item.model_description %></td>
                      <td><%= item.serial_number %></td>
                      <td><%= item.warranty_date %></td>
                      <td><%= item.value %></td>
                      <td><%= item.net_value %></td>
                      <td><%= item.allocation %></td>
                    <td class="action"><%= link_to item_path(item), :class => 'btn btn-sm btn-outline-info' do %><i class="far fa-eye"></i><% end %></td>
          <td class="action">
            <%= link_to edit_item_path(item), :class => 'btn btn-sm btn-outline-warning' do %>
              <i class="far fa-edit"></i>
            <% end %>
          </td>
          <td class="action">
            <%= link_to item_path(item), :class => 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@items) %>
</div>